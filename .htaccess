# Le serveur doit suivre les liens symboliques :
Options +FollowSymlinks

# Activation du module de réécriture d'URL :
RewriteEngine on

# Règles de réécriture d'URL :

# Usagers :
RewriteRule ^ressources/usagers   /usagers/usagers.php
RewriteRule ^ressources/usagers/([0-9]+)$   /usagers/usagers.php?id=$1

# Medecins :
RewriteRule ^ressources/medecins   /medecins/medecins.php
RewriteRule ^ressources/medecins/([0-9]+)$   /medecins/medecins.php?id=$1

# Consultations :
RewriteRule ^ressources/onsultations   /consultations/consultations.php
RewriteRule ^ressources/consultations/([0-9]+)$   /consultations/consultations.php?id=$1

# Statistiques :
RewriteRule ^ressources/statistiques   /statistiques/statistiques.php
RewriteRule ^ressources/statistiques/([0-9]+)$   /statistiques/statistiques.php?id=$1